<div class="container pb-5">

  <div class="text-align-center pb-5">

    <div data-controller="astroboard">

      <div class="switch-container">
        <div class="switch-button on" data-action="click->astroboard#table" data-astroboard-target="table_menu">
          <h5><%= I18n.t "astroboard.table" %></h5>
        </div>
        <div class="switch-button" data-action="click->astroboard#wheel" data-astroboard-target="wheel_menu">
          <h5><%= I18n.t "astroboard.wheel" %></h5>
        </div>
      </div>

      <div data-astroboard-target="table">
        <%= render "astroboard/table"%>
      </div>

      <div data-astroboard-target="wheel" class="d-none">
        <%= render "astroboard/wheel"%>
      </div>
    </div>

</div>

  <div>
    <div class="planet-text mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2><%= I18n.t "planets.Sun" %> <%= I18n.t "astroboard.in" %> <%= I18n.t "signs.#{current_user.sign}" %></h2>
        <div class="sign-profile-image">
          <%= image_tag "#{current_user.sign.downcase}.svg", alt: "" %>
        </div>
      </div>
      <p class="text-justify"><%= I18n.t "planets_in_signs.Sun.#{current_user.sign}" %></p>
      <div class="text-end back-to-top">
        <%= link_to 'Top ↑', "#" %>
      </div>
    </div>

    <div class="planet-text mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Ascendant <%= I18n.t "astroboard.in" %> <%= I18n.t "signs.#{current_user.rising}" %></h2>
        <div class="sign-profile-image">
          <%= image_tag "#{current_user.rising.downcase}.svg", alt: "" %>
        </div>
      </div>
      <p class="text-justify"><%= I18n.t "ascendant_in_signs.#{current_user.rising}" %></p>
      <div class="text-end back-to-top">
        <%= link_to 'Top ↑', "#" %>
      </div>
    </div>

    <div class="planet-text mb-5">
      <div class="d-flex justify-content-between align-items-center">
        <h2><%= I18n.t "planets.Moon" %> <%= I18n.t "astroboard.in" %> <%= I18n.t "signs.#{current_user.moon}" %></h2>
        <div class="sign-profile-image align-items-center">
          <%= image_tag "#{current_user.moon.downcase}.svg", alt: "" %>
        </div>
      </div>
      <p class="text-justify"><%= I18n.t "planets_in_signs.Moon.#{current_user.moon}" %></p>
      <div class="text-end back-to-top">
        <%= link_to 'Top ↑', "#" %>
      </div>
    </div>
  </div>

