<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">

  <% if resource.errors.any? %>
    <% resource.errors.full_messages.each do |message|%>
      <div class="error_notification alert-danger"><%= message %></div>
    <% end %>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :username, required: true %>

      <%= f.input :description, required: false %>

      <%= f.input :hobbies, collection: [
        'Bataille de polochons',
        'Soirée pyjama drogue',
        'Voyager en jet privé',
        'Faire plein de gosses',
        'Cracher du feu sur des bolas',
        'Me déguiser en cornichon et danser'], input_html: {multiple: true}, include_blank: false, include_hidden: false %>

      <%= f.file_field :photos, as: :file, multiple: true, class: "form-control"%>

      <%= f.input :looking_for, as: :radio_buttons, collection: [['1', 'male'], ['2', 'female']], label_method: :second, value_method: :first, required: true %>
      <%= f.input :minimal_age, required: false %>
      <%= f.input :maximum_age, required: false %>
      <%= f.input :search_perimeter, required: false %>
    </div>

      <div class="form-actions d-flex flex-column">
        <%= f.button :submit, "Update infos", class: "btn btn-primary" %>
      </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></p>

  <%= link_to "Back", :back %>

</div>
