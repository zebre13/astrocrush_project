<h2>Edit <%= current_user.username.to_s.humanize %></h2>
<div class="container pb-5">
  <%= simple_form_for(@user, url: update_user_path, method: :put)  do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :username,
                  required: true %>
      <%= f.input :description,
                  required: false %>
      <%= f.file_field :photos,
                        as: :file,
                        multiple: true,
                        class: "form-control"%>
      <%= f.input :looking_for,
                  as: :radio_buttons,
                  collection: [['1', 'male'], ['2', 'female']],
                  label_method: :second,
                  value_method: :first,
                  required: true %>
      <%= f.input :minimal_age,
                  required: false %>
      <%= f.input :maximum_age,
                  required: false %>
      <%= f.input :search_perimeter,
                  required: false %>
    </div>
    <div class="form-actions d-flex flex-column">
      <%= f.button :submit,
                    "Editer mes infos",
                    class: "btn btn-primary"%>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>

