<%# Carousel photos %>
<div id="carouselPhotos" class="carousel slide" data-bs-touch="true">
  <div class="carousel-indicators">
    <% @mate.photos.each_with_index do |photo, index| %>
      <button type="button" data-bs-target="#carouselPhotos" data-bs-slide-to="<%= index %>" class=<%= "active" if index.zero? %> aria-current=<%= "true" if index.zero? %> aria-label="Slide <%= index + 1 %>"></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% @mate.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= "active" if index.zero? %>">
        <div class="detailed-profile-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @mate.photos[index].key, height: 450, width: 410, crop: :fill %>')"></div>
      </div>
    <% end %>
  </div>
</div>

<%# <div class="background"> %>
<div class="container detailed-profile-content">
    <div class="py-3">
      <div class="d-flex justify-content-between border-bottom pb-2">
        <div>
          <div class="name">
            <%= @mate.username %>,
            <span class="age"><%= ((Date.today - @mate.birth_date)/365).floor %></span>
          </div>
          <div class="d-flex">
            <p>
              <span class="me-1">☉</i></span>
              <span class="me-2"><%= I18n.t "signs.#{@mate.sign.capitalize}" %></span>
            </p>
            <p>
              <span class="me-1">↑</span>
              <span class="me-2"><%= I18n.t "signs.#{@mate.rising.capitalize}" %></span>
            </p>
            <p>
              <span class="me-1">☽</span>
              <span class="me-2"><%= I18n.t "signs.#{@mate.moon.capitalize}" %></span>
            </p>
          </div>
        </div>

        <div class="score-container">
          <% if current_user.affinities.find_by(mate_id: @mate.id).score >= 80 %>
            <% level = "high" %>
          <% elsif current_user.affinities.find_by(mate_id: @mate.id).score.in?(60..79) %>
            <% level = "mid-high" %>
          <% elsif current_user.affinities.find_by(mate_id: @mate.id).score.in?(40..59) %>
            <% level = "neutral" %>
          <% elsif current_user.affinities.find_by(mate_id: @mate.id).score.in?(20..39) %>
            <% level = "mid-low" %>
          <% else %>
            <% level = "low" %>
          <% end %>
          <div class="score-planet-<%= level %>">
            <%= current_user.affinities.find_by(mate_id: @mate.id).score %>
            <div class="score-ring-<%= level %>"></div>
          </div>
        </div>
      </div>

      <div class="pt-2 pb-4 border-bottom">
        <h5 class="mb-1">
          <%= I18n.t "description_title" %>
        </h5>
        <p>
          <%= @mate.description %>
        </p>
      </div>

      <div class="pt-2 pb-5 border-bottom">
        <h5 class="mb-1">
          <%#= I18n.t "hobbies_title" %>
        </h5>
        <%# @mate.hobbies.each do |hobby| %>
        <div class="tag">
          <%#= hobby %>
        </div>
        <% end %>
      </div>

      <div class="pt-2 pb-5 border-bottom">
        <h5 class="mb-1">
          <%= current_user.affinities.find_by(mate_id: @mate.id).report.title %>
        </h5>

        <div class="relation-container">
          <div class="relation-icon">
            <i class="fas fa-venus-mars"></i>
          </div>
          <div class="relation-text">
            <p>
              <%= current_user.affinities.find_by(mate_id: @mate.id).report.msg %>
            </p>
          </div>
        </div>

        <p><%= I18n.t "show.keywords" %></p>

        <% current_user.affinities.find_by(mate_id: @mate.id).report.tags.split(",").each do |tag| %>
          <div class="tag">
            <%= tag %>
          </div>
        <% end %>
      </div>

      <div class="pt-2 pb-4 border-bottom">
        <h5 class="mb-1">
          <%= @mate.username %> <%= I18n.t "show.sign_report_title_is" %> <%= I18n.t "signs.#{@mate.sign}" %><%= I18n.t "show.sign_report_title_main" %><%= I18n.t "show.sign_report_title_gender.#{@mate.gender}" %>...
        </h5>

        <div class="sign-picture-container">
          <div class="sign-picture">
            <%= image_tag "#{@mate.sign.downcase}.svg", alt: "" %>
          </div>
        </div>

        <%# Carousel text %>
        <% sun_report = @mate_sun_report.split(".") %>
        <div id="carouselText" class="carousel pb-3 carousel-dark slide" data-bs-touch="true">
          <div class="carousel-indicators">
            <% sun_report.each_with_index do |element, index| %>
              <button type="button" data-bs-target="#carouselText" data-bs-slide-to="<%= index %>" class=<%= "active" if index.zero? %> aria-current=<%= "true" if index.zero? %> aria-label="Slide <%= index + 1 %>"></button>
            <% end %>
          </div>
          <div class="carousel-inner">
            <% sun_report.each_with_index do |element, index| %>
              <div class="carousel-item <%= 'active' if index.zero? %>">
                <div class="sign-text">
                  <p>
                    <%= element %>.
                  </p>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="empty-row">
  </div>

  <div class="buttons-box">
    <%= link_to "", root_path, class: "reject-button" %>
    <%= link_to "↑ Back", root_path, class: "back-button" %>
    <%= link_to root_path, class: "like-button" do %>
      <%= embedded_svg("heart_fill.svg") %>
    <% end %>
  </div>


